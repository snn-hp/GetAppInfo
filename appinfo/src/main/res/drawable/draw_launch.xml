    <!--不缩放-->
    <!--背景-->
    <item>
        <bitmap
            android:gravity="fill"
            android:src="@mipmap/bg_launcher" />
    </item>
    <!--名字-->
    <item
        android:top="100dp">
        <bitmap
            android:gravity="top|center_horizontal"
            android:src="@mipmap/bg_launcher_name" />
    </item>

    <!--底部 图片-->
    <item>
        <bitmap
            android:gravity="bottom|center_horizontal"
            android:src="@mipmap/bg_launcher_bottom_icon" />
    </item>


</layer-list>
